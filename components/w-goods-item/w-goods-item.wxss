/* components/w-goods-item/w-goods-item.wxss */
.goods-item {
  text-align: center;
  color: #333;
  padding-bottom: 85rpx;
}

.goods-item .image {
  width: 100%;
  border-radius: 10rpx;
}

.goods-item .desc-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}

.goods-item .desc-info .title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.goods-item .desc-info .info {
  font-size: 26rpx;
}

.goods-item .desc-info .info .price {
  color: #ff5777;
}

.goods-item .desc-info .info .icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top:4rpx;
}

.goods-item .desc-info .info .cfav {
  position: relative;
}
