/* pages/profile/childCpns/w-header/w-header.wxss */
.header {
  position: relative;
  display: flex;
  background: #ff5777;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #fff;
}

.header .avatar .avatar-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background: #f2f2f2;
  vertical-align: middle;
}

.header .login-info {
  vertical-align: middle;
  margin-left: 30rpx;
}

.header .login-info .login {
  font-size: 36rpx;
  margin-top: 18rpx;
}

.header .login-info .phone {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.header .login-info .phone .phone-image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  bottom: 4rpx;
}

.header .arrow {
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
}

.header .arrow .arrow-image {
  width: 60rpx;
  height: 60rpx;
}
